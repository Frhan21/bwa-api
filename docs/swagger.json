  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "status": {
                "type": "boolean",
                "example": false
              },
              "message": {
                "type": "string",
                "description": "Error message"
              }
            }
          }
        }
      },
      "DefaultResponse": {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "status": {
                "type": "boolean",
                "example": true
              },
              "message": {
                "type": "string",
                "description": "Success message"
              }
            }
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "email": {
            "type": "string",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "example": "Password"
          }
        }
      },
      "CategoryRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Category"
          }
        }
      },
      "ContentRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Content"
          },
          "excerpt": {
            "type": "string",
            "example": "Excerpt"
          },
          "description": {
            "type": "string",
            "example": "Description"
          },
          "tags": {
            "type": "string",
            "example": "Tag1, Tag2"
          },
          "category_id": {
            "type": "integer",
            "example": 1
          },
          "status": {
            "type": "string",
            "example": "published"
          },
          "image": {
            "type": "string",
            "example": "https://example.com/image.jpg"
          }
        }
      },
      "UpdatePasswordRequest": {
        "type": "object",
        "properties": {
          "current_password": {
            "type": "string",
            "example": "Password"
          },
          "new_password": {
            "type": "string",
            "example": "NewPassword"
          },
          "confirm_password": {
            "type": "string",
            "example": "NewPassword"
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "meta": {
            "type": "object",
            "properties": {
              "status": {
                "type": "boolean",
                "example": true
              },
              "message": {
                "type": "string",
                "example": "Success message"
              }
            }
          },
          "access_token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.ey"
          },
          "expires_at": {
            "type": "integer",
            "example": 123
          }
        }
      },
      "CategoryResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Category"
          },
          "slug": {
            "type": "string",
            "example": "slug"
          },
          "user": {
            "type": "string",
            "example": "admin"
          }
        }
      },
      "ContentResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Content"
          },
          "description": {
            "type": "string",
            "example": "Description"
          },
          "excerpt": {
            "type": "string",
            "example": "Excerpt"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "Tag1"
            }
          },
          "image": {
            "type": "string",
            "example": "https://example.com/image.jpg"
          },
          "category": {
            "type": "string",
            "example": "Category"
          },
          "user": {
            "type": "string",
            "example": "admin"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "example": "2023-10-01T12:00:00Z"
          },
          "category_id": {
            "type": "integer",
            "example": 1
          },
          "user_id": {
            "type": "integer",
            "example": 1
          }
        }
      },
      "ProfileResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Admin"
          },
          "email": {
            "type": "string",
            "example": "admin@example.com"
          },
          "password": {
            "type": "string",
            "example": "Password"
          }
        }
      }
    }
