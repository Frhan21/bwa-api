APP_ENV="development"
APP_PORT="8000"

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=bwa_db
DATABASE_MAX_CONNECTION=10
DATABASE_MAX_IDLE_CONNECTION=5
DATABASE_SSL_MODE=disable

# JWT
JWT_SECRET_KEY="change-me"
JWT_ISSUER="bwa-api"

# Optional DATABASE_URL (if you prefer DSN)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bwa_db?sslmode=disable

# Cloudflare R2
CLOUDFLARE_BUCKET_NAME=your-bucket
CLOUDFLARE_API_KEY=your-api-key
CLOUDFLARE_API_SECRET=your-api-secret
CLOUDFLARE_TOKEN=your-token
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_PUBLIC_URL=https://example.r2.dev

# Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
CLOUDINARY_UPLOAD_FILE=bwa-content
